<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.senai.easteregg.activity.ContagemRegressivaActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#7a1076"
        android:gravity="top"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_banner_regressiva"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/relogio" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_titulo_regressiva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Contagem regressiva"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#242424"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_instrucao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="A caçada começará sexta-feira 11 de setembro a partir das 20h!"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#343434"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_contador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="00:00:00"
            android:textColor="#343434"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/tv_fim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Que comecem os jogos..."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#343434"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_proximo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:clickable="true"
                android:gravity="right"
                android:onClick="next"
                android:text="JOGAR"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#7a1076" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
